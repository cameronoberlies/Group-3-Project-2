<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card" style="width: 27rem;">
        <div class="card-body d-flex flex-column align-items-center">
            <h3 class="pet-species-display">{{pet_name}}</h3>
            <a href="/pet/{{pet.id}}"><img class="card-img-details" src="{{photo_url}}" /></a>
            <ul class="card-text">
                <li>{{pet_age}}</li>
                <li>{{breed}}</li>
                <li>{{gender}}</li>
                <li>{{format_date arrival_date}}</li>
                <li>Without a home for: <br> {{duration arrival_date}} days</li>
                <li>{{description}}</li>
            </ul>
        </div>
    </div>
</div>



