<div class="container">
  <div class="row">

    <form class="form search-form">
      <input placeholder="search pets" id="search">
      <div class="form-group">
        <button class="btn btn-primary" type="submit">search</button>
      </div>
    </form>

    {{#each searchedpets as |pet|}}
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <a href="/pet/{{pet.id}}">
            <img class="card-img-top" src="{{pet.photo_url}}" />
          </a>
          <h2>{{pet.pet_name}}</h2>
          <h2>{{pet.breed}}</h2>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

