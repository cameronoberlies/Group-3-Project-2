<div class='favorites-row'>
  <h1 style = "text-align: center; margin-top: 20px;">Favorites</h1>

  <div style="display: flex; flex-wrap: wrap; justify-content: center;">

    {{#each favorites.pets as |favorite|}}
      <div class="card" style="width: 21rem; margin-bottom: 20px;">
        <div class="card-body">
          
           <a href="/pet/{{favorite.id}}">
            <img class="card-img-top" src="{{favorite.photo_url}}" />
          </a>
          <h1 class = "text-primary">{{favorite.pet_name}}</h1>
          <p class="card-text">{{favorite.breed}}</p>
          <button onclick="addToFav(event)" type="button" class="btn btn-outline-primary" value = {{pet.id}}><i class="bi bi-heart"></i> Add to Favorites</button>
        </div>
      </div>
    {{/each}}

  </div>
</div>

<script src="/js/favorites.js"></script>

